{
    color: #034af3;
    text-decoration: none;
}

p
{
    margin-bottom: 10px;
    line-height: 1.6em;
	height: 14px;
}


h1, h2, h3, h4, h5, h6
{
    font-size: 14px;
    color: #666666;    
    text-transform: none;
    font-weight: 200;
    margin-bottom: 0px;
}

h1
{
    font-size: 15px;
    padding-bottom: 0px;
    margin-bottom: 0px;
}

h2
{
    font-size: 12px;
    font-weight: 600;
}

h3
{
    font-size: 12px;
}

h4
{
    font-size: 10px;
}

h5, h6
{
    font-size: 10px;
}

.rightColumn > h1, .rightColumn > h2, .leftColumn > h1, .leftColumn > h2
{
   margin-top: 0px;
}

.page
{    
    width: 100%;
    background-color: #fff;
    text-align:left;
    margin: 1px auto 0px auto;    
    border: 1px solid #496077;    
}

.header
{    	
    position: relative;
    margin: 0px;
    padding: 0px;
    background:SteelBlue;
    width: 100%;	
}

.header h1
{    
    font-weight: 700;
    margin: 0px;
    padding: 0px 0px 0px 20px;
    color: #f9f9f9;
    border: none;
    line-height: 2em;
    font-size: 2em;
}

.main
{
    margin: 6px 8px 8px 8px;
    min-height: 420px;
}

.leftCol
{
    padding: 6px 0px;
    margin: 12px 8px 8px 8px;
    width: 200px;
    min-height: 200px;
}

.footer
{
    color: #4e5766;
    padding: 8px 0px 0px 0px;
    margin: 0px auto;
    text-align: center;
    line-height: normal;
}

.hideSkiplink
{
    background-color:#3a4f63;    
}

fieldset
{
    margin: 1em 0px;
    padding: 1em;
    border: 1px solid #ccc;
}

fieldset p 
{
    margin: 2px 12px 10px 10px;
}

fieldset.login label, fieldset.register label, fieldset.changePassword label
{
    display: block;
}

fieldset label.inline 
{
    display: inline;
}

legend 
{
    font-size: 1.1em;
    font-weight: 600;
    padding: 2px 4px 8px 4px;
}

.textEntry 
{
    width: 320px;
    border: 1px solid #ccc;
}

input.passwordEntry 
{
    width: 320px;
    border: 1px solid #ccc;
}

div.accountInfo
{
    width: 42%;
}

.clear
{
    clear: both;
}

.title
{	
    display: block;
    float: left;
    text-align: left;
    width: auto;
}

.loginDisplay
{    
    font-size: 1.1em;
    display: block;
    text-align:left;
    padding: 10px;
    color: White;
}

.imagem
{    
    display: block;    
    text-align: center;
    width: auto;
}

.loginDisplay a:link
{
    color: white;
}

.loginDisplay a:visited
{
    color: white;
}

.loginDisplay a:hover
{
    color: white;
}

.failureNotification
{
    font-size: 1.2em;
    color: Red;
}

.bold
{
    font-weight: bold;
}

.submitButton
{
    text-align: right;
    padding-right: 10px;
}

